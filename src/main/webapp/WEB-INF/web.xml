    </welcome-file-list>

    <!-- Form Servlet -->
    <servlet>
        <servlet-name>FormServlet</servlet-name>
        <servlet-class>com.example.demo.servlets.FormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FormServlet</servlet-name>
        <url-pattern>/submitForm</url-pattern>
    </servlet-mapping>

